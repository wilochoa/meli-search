<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.wams.meli">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="io.wams.meli.MvpStarterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="io.wams.meli.features.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.wams.meli.features.detail.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="io.wams.meli.features.search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="io.wams.meli.features.country.CountryActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/country" >
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>